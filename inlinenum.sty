% Environment to work with referencable inline numbers, e.g.
% 
%  The task consists of three parts:
%  \begin{inlinenum}
%  \item design,
%  \item\label{create} create,
%  \item evaluate.
%  \end{inlinenum}
%  \ref{create} may well be the easiest.
%  
%  The task consists of three parts: (a) design, (b) create, (c) evaluate.
%  (b) may well be the easiest.
% 

\def\filedate{2004/01/14}
\def\fileversion{0.1}

\NeedsTeXFormat{LaTeX2e}[2000/06/01]
\ProvidesPackage{inlinenum}[\filedate\space\fileversion]
%% \typeout{Package: `inlinenum' 2004 <0.1> (fouvry)}

\newcommand*{\inlinenum@format}{}
\DeclareOption{arabic}{\renewcommand*{\inlinenum@format}{\arabic}}
\DeclareOption{roman}{\renewcommand*{\inlinenum@format}{\roman}}
\DeclareOption{Roman}{\renewcommand*{\inlinenum@format}{\Roman}}
\DeclareOption{alph}{\renewcommand*{\inlinenum@format}{\alph}}
\DeclareOption{Alph}{\renewcommand*{\inlinenum@format}{\Alph}}
\DeclareOption{fnsymbol}{\renewcommand*{\inlinenum@format}{\fnsymbol}}

%% \ExecuteOptions{alph}
\ProcessOptions

\newcounter{inlinenumctr}

\newenvironment{inlinenum}[1][\alph]{%\inlinenum@format
 \renewcommand{\theinlinenumctr}{(#1{inlinenumctr})}%
 \setcounter{inlinenumctr}{0}%
 \renewcommand*{\item}{%
  \refstepcounter{inlinenumctr}%
  \theinlinenumctr~}%
 \ignorespaces
}{\ignorespacesafterend}

\endinput
